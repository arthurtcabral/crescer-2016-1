@model LojaNinja.MVC.Models.UsuarioLoginModel

@{
    Layout = "~/Shared/_SharedUsuario.cshtml";
}

@using (Html.BeginForm("Entrar", "Pedido", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken();
    <div>
        @Html.ValidationSummary(excludePropertyErrors: false)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email) <br/>
        @Html.TextBoxFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Senha) <br/>
        @Html.PasswordFor(m => m.Senha)
    </div>
    <div class="form-group">
        <input type="submit" value="Entrar" />
    </div>
    @Html.ActionLink("Cadastre-se", "CadastroUsuario")
}
